<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SimpleTodo.Maui"
             xmlns:converters="clr-namespace:SimpleTodo.Maui.Converters"
             x:Class="SimpleTodo.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:NotEqualConverter x:Key="NotEqualConverter" />
            <converters:BooleanToTextConverter x:Key="BooleanToTextConverter" />
            <converters:BooleanToTextConverter x:Key="BooleanToImageConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
